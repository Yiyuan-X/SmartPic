{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": [
    "src",
    ".",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
