/**
 * @fileoverview Firestore Security Rules for CleanSweep Pro.
 *
 * Core Philosophy: This ruleset enforces a strict user-ownership model for most data,
 * with the exception of referrals, where additional logic is applied.  Users can only
 * access their own profile data, generated content, scan schedules, and file scan results.
 *
 * Data Structure:
 * - User profiles are stored in `/users/{userId}`.
 * - Content generated by users is stored in `/users/{userId}/generatedContent/{contentId}`.
 * - Scan schedules are stored in `/users/{userId}/scanSchedules/{scanScheduleId}`.
 * - Scan results are stored in `/users/{userId}/scanResults/{fileScanResultId}`.
 * - File information is stored in `/users/{userId}/files/{fileId}`.
 * - Referral information is stored in `/referrals/{referralId}`.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own user profiles and related data.
 * - Listing of users is not allowed.
 * - Referral access is based on application-specific logic.
 *
 * Denormalization for Authorization:
 * - The `userId` field is present in all user-specific data to allow for easy ownership checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Denies all access to any document by default. Specific rules will override this.
     * @path /{document=**}
     * @allow (none)
     * @deny (all)
     * @principle Default deny-all policy.
     */
    match /{document=**} {
      allow read, write: if false;
    }

    /**
     * @description Manages access to user profile documents.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own profile.
     * @allow (get, update, delete) Authenticated user can read, update, and delete their own profile.
     * @deny (create) An unauthenticated user cannot create a profile.
     * @deny (get, update, delete) Authenticated user cannot access another user's profile.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to generated content documents.
     * @path /users/{userId}/generatedContent/{contentId}
     * @allow (create) Authenticated user can create content under their own profile.
     * @allow (get, list, update, delete) Authenticated user can read, list, update, and delete their own content.
     * @deny (create) An unauthenticated user cannot create content.
     * @deny (get, list, update, delete) Authenticated user cannot access another user's content.
     * @principle Enforces document ownership for generated content.
     */
    match /users/{userId}/generatedContent/{contentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to scan schedule documents.
     * @path /users/{userId}/scanSchedules/{scanScheduleId}
     * @allow (create) Authenticated user can create scan schedules under their own profile.
     * @allow (get, list, update, delete) Authenticated user can read, list, update, and delete their own scan schedules.
     * @deny (create) An unauthenticated user cannot create scan schedules.
     * @deny (get, list, update, delete) Authenticated user cannot access another user's scan schedules.
     * @principle Enforces document ownership for scan schedules.
     */
    match /users/{userId}/scanSchedules/{scanScheduleId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to file scan result documents.
     * @path /users/{userId}/scanResults/{fileScanResultId}
     * @allow (create) Authenticated user can create file scan results under their own profile.
     * @allow (get, list, update, delete) Authenticated user can read, list, update, and delete their own file scan results.
     * @deny (create) An unauthenticated user cannot create file scan results.
     * @deny (get, list, update, delete) Authenticated user cannot access another user's file scan results.
     * @principle Enforces document ownership for file scan results.
     */
    match /users/{userId}/scanResults/{fileScanResultId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to file documents.
     * @path /users/{userId}/files/{fileId}
     * @allow (create) Authenticated user can create file documents under their own profile.
     * @allow (get, list, update, delete) Authenticated user can read, list, update, and delete their own file documents.
     * @deny (create) An unauthenticated user cannot create file documents.
     * @deny (get, list, update, delete) Authenticated user cannot access another user's file documents.
     * @principle Enforces document ownership for file documents.
     */
    match /users/{userId}/files/{fileId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to referral documents.
     * @path /referrals/{referralId}
     * @allow (get, list) Allows public read access.
     * @deny (create, update, delete) Denies all write access.
     * @principle Placeholder for referral access logic.
     */
    match /referrals/{referralId} {
       // TODO: Implement more detailed rules based on the application's referral program logic.
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}